{
  "name": "product-service",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "type": "module",
  "jest": {
    "rootDir": "tests",
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "coverageDirectory": "/test/.coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "globals": {
      "ts-jest/presets/js-with-ts-esm": {
        "tsconfig": "tsconfig.json",
        "useESM": true
      }
    }
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --colors --verbose --silent",
    "build": "tsc -p .",
    "start": "node dist/src/server.js",
    "dev": "nodemon src/server.ts"
  },
  "keywords": [],
  "author": "3l-d1abl0",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.9.0",
    "mongoose": "^8.6.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.1"
  }
}
