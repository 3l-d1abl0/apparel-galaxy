{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "types/**/*.d.ts"
  ],
  "strict": true,
  "ts-node": {
      "esm": true
  },
  "exclude": [
    "node_modules",
    ".vscode"
  ],
  "types": [
    "jest"
  ]
}